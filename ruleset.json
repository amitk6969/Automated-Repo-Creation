{
  "name": "Basic Public Repo Ruleset",
  "target": "branch",
  "enforcement": "active",
  "conditions": {
    "ref_name": {
      "include": ["refs/heads/main"]
    }
  },
  "rules": [
    {
      "type": "pull_request",
      "parameters": {
        "required_approving_review_count": 1
      }
    },
    {
      "type": "non_fast_forward",
      "parameters": {
        "block_force_pushes": true
      }
    },
    {
      "type": "deletion",
      "parameters": {
        "block_deletions": true
      }
    },
    {
      "type": "linear_history",
      "parameters": {}
    }
  ]
}
